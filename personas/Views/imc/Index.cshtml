@model personas.Models.PersonaModel

@{
    ViewData["Title"] = "Calculadora de IMC";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Formulario de registro</h2>

        <!-- Formulario que envía los datos a la acción Index del controlador Imc -->
        @using (Html.BeginForm("Index", "Imc", FormMethod.Post, new { @class = "mt-4" }))
        {
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="Nombre" class="form-label">Nombre</label>
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingresa tu nombre" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label for="Apellido" class="form-label">Apellido</label>
                    @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", placeholder = "Ingresa tu apellido" })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="Peso" class="form-label">Peso (kg)</label>
                    @Html.TextBoxFor(model => model.Peso, new { @class = "form-control", placeholder = "Ingresa tu peso en kg" })
                    @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label for="Altura" class="form-label">Altura (m)</label>
                    @Html.TextBoxFor(model => model.Altura, new { @class = "form-control", placeholder = "Ingresa tu altura en metros (Ej: 1.80)" })
                    @Html.ValidationMessageFor(model => model.Altura, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary">Agregar Persona</button>
                </div>
            </div>
        }

        <a href="@Url.Action("Lista", "Imc")" class="btn btn-link">Ver la lista de personas</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
