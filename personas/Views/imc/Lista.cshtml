@model List<personas.Models.PersonaModel>

@{
    ViewData["Title"] = "Lista de Personas";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Lista de Personas Registradas</h2>

        <table class="table table-bordered mt-4">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>IMC</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    int i = 1;
                    foreach (var persona in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@persona.Nombre</td>
                            <td>@persona.Apellido</td>
                            <td>@persona.Peso</td>
                            <td>@persona.Altura</td>
                            <td>@persona.IMC.ToString("F2")</td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No hay personas registradas.</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("Index", "Imc")" class="btn btn-primary">Registrar otra persona</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
